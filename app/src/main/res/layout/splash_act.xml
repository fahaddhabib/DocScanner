<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ly_splash_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:visibility="visible">


    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/round_img_splash"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"
        android:layout_gravity="center"
        app:riv_corner_radius="@dimen/_15sdp"
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:src="@drawable/splash" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lav_wave"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_200sdp"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        android:layout_centerInParent="true"
        app:lottie_rawRes="@raw/document_ocr_scan"
        app:lottie_speed="1.0" />

    <TextView
        android:id="@+id/txt_splash"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lav_wave"
        android:fontFamily="@font/inter_bold"
        android:gravity="center"
        android:singleLine="true"
        android:text="@string/app_name"
        android:textColor="@color/black"
        android:textSize="@dimen/_25sdp" />


</RelativeLayout>
